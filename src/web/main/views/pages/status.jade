doctype html

html(lang='ja', dir='ltr')
	head
		include ../common/head
		meta(name='keywords', content='Misskey')
		title= status.user.name + 'さんの' + status.displayCreatedAt + 'の投稿'
		link(rel='stylesheet', href='/resources/styles/common/status-timeline-detail.css')
		link(rel='stylesheet', href='/resources/styles/user-status.css')
		script(src='/resources/scripts/common/detail-status-core.js')
		script(src='/resources/scripts/user-status.js')
	
	body
		include ../common/header
		
		main(role='main')
			div#status
				button#read-after(role='button', title='これより後の投稿を読む')
					i.fa.fa-angle-up
				div.ui-status.main!= statusHtml
				button#read-before(role='button', title='これより前の投稿を読む')
					i.fa.fa-angle-down
