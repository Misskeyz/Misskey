doctype html

html(lang='ja', dir='ltr')
	head
		include ../../common/mobile/head
		title Misskey
		link(rel='stylesheet', href='/resources/styles/mobile/home.css')
		script(src='/resources/scripts/mobile/header.js')
		script(src='/resources/scripts/mobile/home.js')
	
	body
		header#misskey-main-header
			h1 Home
			a.post(href='/i/status-new?ref=/'): i.fa.fa-pencil-square-o
		include ../../common/mobile/nav
		
		main(role='main')
			div#timeline
				form#post-form(enctype='multipart/form-data', role='form')
					textarea(name='text', placeholder='What\'s up?', role='textbox', aria-multiline)
					input.ui-button(type='submit', value!='&#xf1d8;', role='button')
					div.image-attacher
						p
							i.fa.fa-picture-o
						input(name='image', type='file', accept='image/*')
				div.timeline-container
					div.timeline-main!= timelineHtml