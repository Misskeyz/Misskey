header#misskey-main-header(role='banner')
	script(src='/resources/scripts/lib/moment.js')
	script(src='/resources/scripts/header.js')
	nav.informationCenter
		ul
			li
				a(href='/bbs') 掲示板
	if config.env == 'development'
		p.env-development-info
			strong
				em 開発チャンネル
				| を利用しています。
			| このチャンネルでは開発中の機能・デザインなどをいち早く利用できますが、不具合が存在する場合があります。
			em.go-production-channel
				a(href= config.productionChannelUrl)
					i.fa.fa-angle-right
					| 安定チャンネル
	div.main
		div.mainContentsContainer
			if login
				div.left
					nav
						div.mainNav
							button(role='button').misskey Misskey
							ul
								li.home(class= pagePath == '/' ? 'active' : ''): a.ui-waves-effect(href='/')
									i.fa.fa-home
									| Home
								li.mention(class= pagePath == '/i/mentions' ? 'active' : ''): a.ui-waves-effect(href='/i/mentions')
									i.fa.fa-at
									| Mentions
								li.talk(class= pagePath == '/i/talks' ? 'active' : ''): a.ui-waves-effect(href='/i/talks')
									i.fa.fa-comments
									| Talks
								li.mention(class= pagePath == '/bbs' ? 'active' : ''): a.ui-waves-effect(href='/bbs')
									i.fa.fa-users
									| Boards
				div.right
					div.search(role='search')
						input(type='search', placeholder!='&#xf002; Search')
						div.result
					div.notice
						div.dropdown
							div.i
								i.fa.fa-bell
							div.dropdownContainer
								button.allDeleteButton(role='button', title='全て削除')
									i.fa.fa-trash
								div.dropdownContent
									if notices != null
										ol.notices
											each notice in notices
												li.notice(title= notice.createdAt
													data-id= notice.id)
													time(datetime= notice.createdAt)= notice.createdAt
													div.content!= notice.content
													span.appName= notice.app.name
													button.deleteButton(role='button', title='削除')
														img(src='/resources/images/notice-delete.png', alt='Delete')
									else
										p.empty 通知はありません
					div.account
						div.dropdown(data-active='false')
							div.dropdown-header(role='button')
								span.screenName
									= '@' + me.screenName
									i.fa.fa-angle-down
								img.icon(src= me.iconImageUrl, alt='icon')
							div.dropdown-content
								ul
									li: a.ui-waves-effect(href= url + '/' + me.screenName)
										i.fa.fa-laptop
										| My page
									li: a.ui-waves-effect(href='/i/settings')
										i.fa.fa-cog
										| Settings
									li: a.ui-waves-effect(href='/logout')
										i(class='fa fa-power-off')
										| Signout
					div.time
						time.now(datetime= Date.now())
							= moment().format('YYYY/MM/DD')
							br
							= moment().format('HH:mm')
			else
				div.left
					nav
						div.mainNav
							button(role='button').misskey Misskey
							ul
								li.home: a.ui-waves-effect(href='/')
									i.fa.fa-home
									| エントランス
								li.mention(class= pagePath == '/bbs' ? 'active' : ''): a.ui-waves-effect(href='/bbs')
									i.fa.fa-users
									| Boards
