doctype html

html(lang='ja', dir='ltr')
	head
		include ../common/head
		title 新規投稿
		link(rel='stylesheet', href='/resources/styles/page/i-status-new.css')
		script(src='/resources/scripts/common/header.js')
		script(src='/resources/scripts/page/i-status-new.js')
	
	body
		header#misskey-main-header
			button#open-misskey-main-nav-button(role='button'): i.fa.fa-bars
			h1 新規投稿
		include ../common/nav
		
		main#misskey-main(role='main')
			form#form(action= config.apiUrl + '/status/update', method='post', enctype='multipart/form-data', role='form')
				textarea.ui-textarea#textarea(name='text', placeholder='What\'s up?', role='textbox', aria-multiline)
				input.ui-input-file(name='image', type='file', accept='image/*')
				input.ui-button(type='submit', value!='投稿 &#xf1d8;', role='button')

