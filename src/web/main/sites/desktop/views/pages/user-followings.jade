extends ../layouts/user

block title
	= user.name

block assets
	link(rel='stylesheet', href='/resources/styles/page/user-followings.css?user=' + user.screenName)
	script(src='/resources/scripts/page/user-followings.js')

block contents
	div#followings-list
		div.users-list
			ol.users
				each followee in followings
					li.user
						a.icon-anchor(href= '/' + followee.screenName)
							img.icon(src=followee.iconImageUrl, alt='icon')
						div.main-container
							p
								a(href='/' + followee.screenName)= followee.name
								span.screen-name= '@' + followee.screenName
							if followee.comment != null
								p.comment= followee.comment
							if login
								if me.id != followee.id
									if followee.isFollowing
										button.friend-button.following フォロー中
									else
										button.friend-button.not-following フォロー
								else
									p.friend-status
										i.fa.fa-smile-o
										| You
