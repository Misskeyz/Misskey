extends ../layouts/user

block title
	= user.name

block assets
	link(rel='stylesheet', href='/resources/styles/page/user-followings.css?user=' + user.screenName)
	script(src='/resources/scripts/page/user-followings.js')

block contents
	div#followings-list
		div.users-list
			ol.users
				each user in followings
					li.user
						a.icon-anchor(href= '/' + user.screenName)
							img.icon(src=user.iconImageUrl, alt='icon')
						div.main-container
							p
								a(href='/' + user.screenName)= user.name
								span.screenName= '@' + user.screenName
							if user.comment != null
								p.comment= user.comment
							if login
								if me.id != user.id
									if user.isFollowing
										button.friend-button.following フォロー中
									else
										button.friend-button.not-following フォロー
								else
									p.friend-status
										i.fa.fa-smile-o
										| You
