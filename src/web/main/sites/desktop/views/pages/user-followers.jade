extends ../layouts/user

block title
	= user.name

block assets
	link(rel='stylesheet', href='/resources/styles/page/user-followers.css?user=' + user.screenName)
	script(src='/resources/scripts/page/user-followers.js')

block contents
	div#followers-list
		div.users-list
			ol.users
				each follower in followers
					li.user
						a.icon-anchor(href= '/' + follower.screenName)
							img.icon(src=follower.iconImageUrl, alt='icon')
						div.main-container
							p
								a.name(href='/' + follower.screenName)= follower.name
								span.screen-name= '@' + follower.screenName
							if follower.comment != null
								p.comment= follower.comment
							if login
								if me.id != follower.id
									if follower.isFollowing
										button.friend-button.following フォロー中
									else
										button.friend-button.not-following フォロー
								else
									p.friend-status
										i.fa.fa-smile-o
										| You
