extends ../layouts/user

block title
	= user.name

block assets
	link(rel='stylesheet', href='/resources/styles/page/user-followings-or-followers.css?user=' + user.screenName)
	script(src='/resources/scripts/page/user-followings-or-followers.js')

block contents
	div.main
		div.users-list
			ol.users
				each follower in followers
					li.user(data-user-id= follower.id, data-is-following!= follower.isFollowing.toString())
						a.icon-anchor(href= '/' + follower.screenName, title= follower.comment)
							img.icon(src=follower.iconImageUrl, alt='icon')
						div.main-container
							p.title
								a.name(href='/' + follower.screenName)= follower.name
								span.screen-name= '@' + follower.screenName
							if login
								div.friend-form
									if me.id != follower.id
										if follower.isFollowing
											button.friend-button.following Following
										else
											button.friend-button.not-following Follow
										if follower.isFollowMe
											p.friend-status.follow-me(data-is-friend='true', data-tooltip='フォローされています')
												i.fa.fa-heart
										else
											p.friend-status.not-follow-me(data-is-friend='false', data-tooltip='フォローされていません')
												i.fa.fa-heart-o
									else
										p.is-me
											i.fa.fa-smile-o
											| You
