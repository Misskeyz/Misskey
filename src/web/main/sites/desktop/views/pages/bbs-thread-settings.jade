doctype html

html(lang='ja', dir='ltr', data-thread-id= thread.id)
	head
		include ../common/head
		title スレッドの設定
		link(rel='stylesheet', href='/resources/styles/page/bbs-thread-settings.css')
		script(src='/resources/scripts/page/bbs-thread-settings.js')
	
	body
		include ../common/header
		
		main(role='main')
			form#form
				h1
					i.fa.fa-pencil-square-o
					| スレッドの設定
				div.main
					label
						h2 タイトル
						input.ui-input-text(type='text', name='title', placeholder=thread.title, required, disabled)= thread.title
					label#eyecatch
						h2 アイキャッチ
						div.image-attacher
							p 画像をドロップまたは選択
							img.image(src=url + '/img/bbs-thread-eyecatch/' + thread.id, alt='eyecatch')
							input(name='image', type='file', accept='image/*')
					input(type='hidden', name='thread-id', value= thread.id)
					input.submit-button.ui-button(type='submit', value!='更新 &#xf1d8;')
