extends ../layouts/user

block title
	title= user.name

block content
	if page == 'home'
		div#timeline!= timelineHtml
	if page == 'profile'
		div#profile
			div#bio!= bio
	if page == 'followings'
		div#followings-list
			h2 Followings
			div.usersList
				ol
					each user in followings
						li(data-user-verified!= user.isVerified.toString())
							a(href= '/' + user.screenName)
								img.icon(src=user.iconImageUrl, alt='icon')
							h2
								a(href='/' + user.screenName)= user.name
								span.screenName= '@' + user.screenName
							if user.comment != null
								p.comment= user.comment
	if page == 'followers'
		div#followers-list
			h2 Followers
			div.usersList
				ol
					each user in followers
						li(data-user-verified!= user.isVerified.toString())
							a(href= '/' + user.screenName)
								img.icon(src=user.iconImageUrl, alt='icon')
							h2
								a(href='/' + user.screenName)= user.name
								span.screenName= '@' + user.screenName
							if user.comment != null
								p.comment= user.comment