doctype html

html(lang='ja', dir='ltr', itemscope, itemtype='https://schema.org/WebPage')
	head(prefix='og: http://ogp.me/ns#')
		meta(charset='utf-8')
		meta(name='description', content='思い出した時に来るくらいが丁度いい、ゆるいSNS「Misskey」！')
		meta(name='keywords', content='Misskey')
		meta(name='theme-color', content='#831c86')
		meta(property='og:title', content='Misskey')
		meta(property='og:type', content='website')
		meta(property='og:description', content='Misskeyは開発中のゆるいSNSです。')
		meta(property='og:url', content=url)
		meta(property='og:image', content='')
		meta(property='og:site_name', content='Misskey')
		title Misskey
		link(rel='shortcut icon', href='/favicon.icon')
		link(rel='stylesheet', href='/resources/styles/entrance.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		script(src='/resources/scripts/entrance.js')
	body
		main
			h1 Misskey
			form#loginForm(action='/login', method='post')
				input#id(name='screen_name'
					type='text'
					pattern='^[0-9A-Za-z_]+$'
					placeholder='ユーザー名'
					autocomplete='off'
					autofocus
					required)
				input(name='password'
					type='password'
					placeholder='パスワード'
					autocomplete='off'
					required)
				input(type='submit', value='Login')
