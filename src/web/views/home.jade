doctype html

html(lang='ja', dir='ltr')
	head
		meta(charset='utf-8')
		meta(name='description', content='ママに咲いたカーネーション')
		meta(name='keywords', content='Misskey')
		title Misskey ホーム
		link(rel='shortcut icon', href='/favicon.icon')
		link(rel='stylesheet', href='/resources/styles/ui.css')
		link(rel='stylesheet', href='/resources/styles/home.css')
		script(src='/config')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		script(src=apiUrl + ':1207/socket.io/socket.io.js')
		script(src='/resources/common/timeline.js')
		script(src='/resources/scripts/home.js')
		
	body
		nav
			div#me
				img#meIcon(src=url + '/img/icon/' + me.screenName, alt='icon')
				span#meName(contenteditable)= me.name
				span#meScreenName= me.screenName
				p#meComment(contenteditable)= me.comment
			table#me-status
				tr
					th 投稿
					td: a#me-postsCount(href=url + me.screenName)= 'n'
				tr
					th フォロー
					td: a#me-followingsCount(href=url + me.screenName + '/following')= 'n'
				tr
					th フォロワー
					td: a#me-followersCount(href=url + me.screenName + '/followers')= 'n'
			ul
				li: a(href=url + '/i') マイ メニュー
				li: a(href=url + '/i/setting') 設定
		
		main
			div#timeline
				form#postForm(action=apiUrl + '/post/create', method='post', enctype='multipart/form-data')
					textarea(name='text', placeholder='What\'s up?')
					input(type='submit', value='Update')
					div.image
						p 画像を添付
						input(name='image', type='file')
					
				div.timeline
					ol.posts
						each post in timeline
							li.post(title='#{post.createdAt}&#x0A;via #{post.app.name}'
									data-id=post.id
									data-userId=post.user.id)
								if post.isReply
									div.replyTo
										p.text= post.reply.text
								article
									a(href=url + '/' + post.user.screenName)
										img.icon(src=url + '/img/icon/' + post.user.screenName, alt='icon')
									header
										h2
											a(href=url + '/' + post.user.screenName)= post.user.name
										span.screenName= '@' + post.user.screenName
										time= post.createdAt
									p.text= post.text
									if post.isImageAttached
										img.image(src=url + '/img/post/' + post.id, alt='image')
								footer
									form.replyForm
										textarea(name='text')
										input(name='in_reply_to_post_id', type='hidden', value=post.id)
										input(type='submit', value='Update')
										div.imageAttacher
											p 画像を添付
											input(name='image', type='file')
